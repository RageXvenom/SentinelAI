# ============================================
# DISCORD BOT CONFIGURATION
# ============================================
# Get your bot token from:
# https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Your Discord User ID
DISCORD_OWNER_ID=YOUR_DISCORD_USER_ID

# ============================================
# SUPABASE DATABASE CONFIGURATION
# ============================================
# Get from:
# https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Optional: Anon key (not required for bot)
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# ============================================
# GROQ AI CONFIGURATION
# ============================================
# Get from:
# https://console.groq.com/keys
GROQ_API_KEY=YOUR_GROQ_API_KEY

# ============================================
# BOT SETTINGS
# ============================================
BOT_PREFIX=!
NODE_ENV=production
DEBUG_MODE=false

# ============================================
# MODERATION SETTINGS (DEFAULTS)
# ============================================
CAPTCHA_AGE_THRESHOLD=7
MAX_WARNINGS_KICK=3
MAX_WARNINGS_BAN=5

# ============================================
# ANTI-NUKE DEFAULT SETTINGS
# ============================================
ANTINUKE_ENABLED=true
ANTINUKE_CHANNEL_DELETE_LIMIT=3
ANTINUKE_ROLE_DELETE_LIMIT=3
ANTINUKE_BAN_LIMIT=3
ANTINUKE_PUNISHMENT_TYPE=BAN

# ============================================
# ADVANCED SETTINGS
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=5
CAPTCHA_EXPIRATION=10
CAPTCHA_MAX_ATTEMPTS=3
LOG_LEVEL=info
DEFAULT_TIMEZONE=UTC

# ============================================
# VERIFICATION SETTINGS
# ============================================
VERIFIED_ROLE_ID=YOUR_VERIFIED_ROLE_ID
VERIFICATION_CHANNEL_ID=YOUR_VERIFICATION_CHANNEL_ID
VERIFICATION_ENABLED=true
VERIFICATION_TIMEOUT=10

# ============================================
# SECURITY NOTES
# ============================================
# NEVER commit your real .env file
# Add .env to .gitignore
# Rotate keys if exposed
# Use platform environment variables in production
